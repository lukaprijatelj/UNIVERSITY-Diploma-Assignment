<!DOCTYPE html>
<html>
	<head>
		<title><%= title %></title>

		<meta name="description" content="Diploma assignment for Faculty of Computer and Information Science - University of Ljubljana">
		<meta name="author" content="Luka Prijatelj">
		<meta name="viewport" content="width=device-width, initial-scale=1">

		<!-- favicon -->
		<link rel="icon" type="image/png" href="images/admin-favicon.png" />

		<!-- fonts -->
		<link href="https://fonts.googleapis.com/css?family=Muli:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

		<!-- styles -->
		<link rel="stylesheet" href="stylesheets/common.css">
		<link rel="stylesheet" href="stylesheets/server-admin.css">

		<!-- layouts -->
		<link rel="stylesheet" href="layoutsheets/common.css">
		<link rel="stylesheet" href="layoutsheets/server-admin.css">

		<!-- constants -->
		<script>
			var IS_DEBUG_MODE = <%= constants.IS_DEBUG_MODE %>;
			var CANVAS_WIDTH = <%= constants.CANVAS_WIDTH %>;
			var CANVAS_HEIGHT = <%= constants.CANVAS_HEIGHT %>;
			var BLOCK_WIDTH = <%= constants.BLOCK_WIDTH %>;
			var BLOCK_HEIGHT = <%= constants.BLOCK_HEIGHT %>;
			var HOSTING_URL = '<%= constants.HOSTING_URL %>';
			var IS_CONSOLE_ENABLED = <%= constants.IS_CONSOLE_ENABLED %>;
		</script>


		<!-- ----------------------------- -->
		<!-- Scripts that will be loaded asynchronously -->
		<!-- ----------------------------- -->
		<script src="javascripts/enums.js"></script>
		<script src="javascripts/socket.io/socket.io.js"></script>

		<!-- Extension scripts -->
		<script src="javascripts/extensions/array.js"></script>
		<script src="javascripts/extensions/date.js"></script>
		<script src="javascripts/extensions/function.js"></script>
		<script src="javascripts/extensions/math.js"></script>
		<script src="javascripts/extensions/object.js"></script>
		<script src="javascripts/extensions/HTMLElement.js"></script>
		<script src="javascripts/extensions/console.js"></script>

		<!-- Classes scrips -->
		<script src="javascripts/classes/GridLayout.js"></script>
		<script src="javascripts/classes/CanvasLayout.js"></script>
	</head>
	<body>

		<!-- Interface -->
		<div id="interface" class="">

			<!-- All cells will be rendered in this wrapper -->
			<section>
				<label>Rendered cells</label>
				<div id="layout-wrapper" class="loading"></div>
			</section>
			<divider-x-small></divider-x-small>


			<!-- Start new client button -->
			<section-inline>
				<label>Clients connected</label>
				<input type="number" id="clients-connected-input" class="loading disabled">
				<button id="start-new-client-button" class="dark loading" onclick="GLOBALS._onStartNewClientClick()"></button>
			</section-inline>
			<divider-x></divider-x>		

			
			<!-- Canvas width and height inputs -->
			<section-inline>
				<label>Canvas width (px)</label>
				<input type="number" id="canvas-width-input" class="loading">
			</section-inline>
			<section-inline>
				<label>Canvas height (px)</label>
				<input type="number" id="canvas-height-input" class="loading">
			</section-inline>
			<divider-y-small></divider-y-small>

			<!-- Block width and height inputs -->
			<section-inline>
				<label>Block width (px)</label>
				<input type="number" id="block-width-input" class="loading">
			</section-inline>
			<section-inline>
				<label>Block height (px)</label>
				<input type="number" id="block-height-input" class="loading">
			</section-inline>
			<divider-x-small></divider-x-small>



			<!-- Recalculate button -->
			<button id="recalculate-layout-button" class="dark loading" onclick="GLOBALS._onRecalculateLayoutClick()"></button>
				
		</div>		


		<!-- ----------------------------- -->
		<!-- Scripts that will be loaded synchronously -->
		<!-- ----------------------------- -->
		<script src="javascripts/server-admin.js"></script>
	</body>
</html>
<!DOCTYPE html>
<html>
	<head>
		<title><%= title %></title>

		<!-- fonts -->
		<link href="https://fonts.googleapis.com/css?family=Muli:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

		<!-- styles -->
		<link rel="stylesheet" href="stylesheets/common.css">
		<link rel="stylesheet" href="stylesheets/client-admin.css">

		<!-- constants -->
		<script>
			var IS_DEBUG_MODE = <%= constants.IS_DEBUG_MODE %>;
			var CANVAS_WIDTH = <%= constants.CANVAS_WIDTH %>;
			var CANVAS_HEIGHT = <%= constants.CANVAS_HEIGHT %>;
			var HOSTING_URL = '<%= constants.HOSTING_URL %>';
		</script>

		<!-- scripts -->
		<script src="javascripts/socket.io/socket.io.js"></script>
		<script src="javascripts/helper.js"></script>
	</head>
	<body>
		<!-- Curtain that informs user that site is loading -->
		<div-fixed id="loading-curtain">
			<div class="wrapper">
				<div class="message">Loading admin interface</div>
			</div>
		</div-fixed>

		<!-- Interface -->
		<div id="interface" class="hidden">
			<div-fixed id="left-sidebar" class="">
				<wrapper-relative>
					<div class="minimized-section" class="">
						<button id="expand-button" class="light">&gt;&gt;</button>
					</div>
					<div class="expanded-section hidden">
						<button id="minimize-button" class="light">&lt;&lt;</button>
						<button class="light" onclick="GLOBALS._onRecalculateLayoutClick()">Recalculate layout</button>
						<button class="light" onclick="GLOBALS._onStartNewClientClick()">Start new client (tab)</button>
					</div>
				</wrapper-relative>				
			</div-fixed>

			<div id="grid-layout"></div>
		</div>		

		<!-- Scripts that will be loaded synchronously -->
		<script src="javascripts/client-admin.js"></script>
	</body>
</html>